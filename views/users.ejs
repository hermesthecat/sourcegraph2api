<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> - S2A Panel
    </title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>

    <div class="container">
        <%- include('partials/nav') %>
            <%- include('partials/messages') %>
                <h1>Kullanıcı Yönetimi</h1>

                <div class="content-grid">
                    <!-- Yeni Kullanıcı Ekle -->
                    <div class="card">
                        <h3>Yeni Kullanıcı Ekle</h3>
                        <form action="/admin/users/add" method="POST" class="form-container">
                            <div class="form-group">
                                <label for="username">Kullanıcı Adı</label>
                                <input type="text" id="username" name="username" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Şifre</label>
                                <input type="password" id="password" name="password" required>
                            </div>
                            <button type="submit" class="button">Kullanıcı Ekle</button>
                        </form>
                    </div>

                    <!-- Mevcut Kullanıcılar -->
                    <div class="card">
                        <h3>Mevcut Kullanıcılar</h3>
                        <div class="table-container">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Kullanıcı Adı</th>
                                        <th>Oluşturulma Tarihi</th>
                                        <th>Eylemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(user => { %>
                                        <tr>
                                            <td><%= user.username %></td>
                                            <td><%= new Date(user.createdAt).toLocaleString() %></td>
                                            <td class="actions">
                                                <a href="/admin/users/edit/<%= user.id %>" class="button button-small">Düzenle</a>
                                                <% if (user.username !== 'admin') { %>
                                                    <form action="/admin/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                                                        <button type="submit" class="button button-small button-danger" onclick="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">Sil</button>
                                                    </form>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
    </div>
</body>

</html>