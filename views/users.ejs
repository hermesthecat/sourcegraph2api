<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Yönetimi | Sourcegraph Proxy</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container">
        <%- include('partials/nav.ejs') %>
            <%- include('partials/messages.ejs') %>

                <h1>Kullanıcı Yönetimi</h1>

                <div class="content-grid">
                    <div class="form-container">
                        <h2>Kullanıcı Ekle</h2>
                        <form action="/admin/users/add" method="POST">
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="username">Kullanıcı Adı</label>
                                    <input type="text" id="username" name="username" required>
                                </div>
                                <div class="form-group">
                                    <label for="password">Şifre</label>
                                    <input type="password" id="password" name="password" required>
                                </div>
                            </div>
                            <br>
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </form>
                    </div>

                    <div class="table-container-wrapper">
                        <h2>Mevcut Kullanıcılar (<%= users.length %>)</h2>
                        <div class="table-container">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Kullanıcı Adı</th>
                                        <th>Oluşturulma Tarihi</th>
                                        <th>Eylemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (users && users.length> 0) { %>
                                        <% users.forEach(user=> { %>
                                            <tr>
                                                <td>
                                                    <%= user.username %>
                                                </td>
                                                <td>
                                                    <%= new Date(user.createdAt).toLocaleString() %>
                                                </td>
                                                <td class="actions">
                                                    <button class="btn btn-secondary open-edit-modal-btn"
                                                        style="background-color:#f39c12;" data-userid="<%= user.id %>"
                                                        data-username="<%= user.username %>">Düzenle</button>
                                                    <form action="/admin/users/delete/<%= user.id %>" method="POST"
                                                        style="display:inline;">
                                                        <button type="submit" class="btn btn-danger"
                                                            onclick="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">Sil</button>
                                                    </form>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="3">Gösterilecek veri yok.</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Kullanıcı Düzenle Modal -->
                <div id="editUserModal" class="modal">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3>Kullanıcıyı Düzenle</h3>
                            <span class="close-btn">&times;</span>
                        </div>
                        <form id="editUserForm" action="" method="POST">
                            <div class="modal-body">
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="editUsername">Kullanıcı Adı</label>
                                        <input type="text" id="editUsername" name="username" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="editPassword">Yeni Şifre</label>
                                        <input type="password" id="editPassword" name="password"
                                            placeholder="Değiştirmek istemiyorsanız boş bırakın">
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" id="cancelEditBtn">İptal</button>
                                <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
                            </div>
                        </form>
                    </div>
                </div>

                <script>
                    // === Edit User Modal Logic ===
                    const editUserModal = document.getElementById('editUserModal');
                    const openEditBtns = document.querySelectorAll('.open-edit-modal-btn');
                    const closeEditBtn = editUserModal.querySelector('.close-btn');
                    const cancelEditBtn = document.getElementById('cancelEditBtn');
                    const editForm = document.getElementById('editUserForm');
                    const editUsernameInput = document.getElementById('editUsername');

                    openEditBtns.forEach(btn => {
                        btn.addEventListener('click', () => {
                            const userId = btn.dataset.userid;
                            const username = btn.dataset.username;

                            editUsernameInput.value = username;

                            // Kullanıcı 'admin' ise, kullanıcı adı alanını sadece okunabilir yap
                            if (username === 'admin') {
                                editUsernameInput.readOnly = true;
                            } else {
                                editUsernameInput.readOnly = false;
                            }

                            document.getElementById('editPassword').value = '';

                            editForm.action = `/admin/users/edit/${userId}`;
                            editUserModal.style.display = 'block';
                        });
                    });

                    function closeEditModal() {
                        editUserModal.style.display = 'none';
                    }

                    closeEditBtn.addEventListener('click', closeEditModal);
                    cancelEditBtn.addEventListener('click', closeEditModal);

                    // === Generic Modal Close Logic ===
                    window.addEventListener('click', (event) => {
                        if (event.target === editUserModal) {
                            closeEditModal();
                        }
                    });
                </script>
    </div>
</body>

</html>